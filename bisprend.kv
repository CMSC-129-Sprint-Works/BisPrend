#:kivy 2.0.0

<BisprendEngine>:
    FloatLayout:
        canvas:
            Color: 
                rgb: 0.06,.54,.7
            Rectangle:
                size: (root.width, root.height)
                
        Label:
            font_size: 85
            center_x: root.width / 2
            top: root.top - 20
            text: "Pangalan"
            
        TextInput:
            id: username
            font_size: 30  
            size_hint: (4.5,0.5)
            center_x: root.width / 2
            top: root.top - 150
            text: "Input name here"

        Button:
            text: "Confirm"
            font_size: 30  
            size_hint: (4.5,0.5)
            center_x: root.width / 2
            top: root.top - 210
            text: "Confirm"